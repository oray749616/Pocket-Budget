<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme colors for Material Design 3 -->
    <style name="Base.Theme.BudgetApp" parent="Theme.Material3.DayNight">
        <!-- Primary Colors (Dark) -->
        <item name="colorPrimary">#4DDADB</item>
        <item name="colorOnPrimary">#003738</item>
        <item name="colorPrimaryContainer">#004F50</item>
        <item name="colorOnPrimaryContainer">#6FF7F8</item>
        
        <!-- Secondary Colors (Dark) -->
        <item name="colorSecondary">#B0CCCC</item>
        <item name="colorOnSecondary">#1B3535</item>
        <item name="colorSecondaryContainer">#324B4B</item>
        <item name="colorOnSecondaryContainer">#CCE8E7</item>
        
        <!-- Tertiary Colors (Dark) -->
        <item name="colorTertiary">#B6C8E8</item>
        <item name="colorOnTertiary">#1F314B</item>
        <item name="colorTertiaryContainer">#364863</item>
        <item name="colorOnTertiaryContainer">#D2E4FF</item>
        
        <!-- Error Colors (Dark) -->
        <item name="colorError">#FFB4AB</item>
        <item name="colorOnError">#690005</item>
        <item name="colorErrorContainer">#93000A</item>
        <item name="colorOnErrorContainer">#FFDAD6</item>
        
        <!-- Surface Colors (Dark) -->
        <item name="colorSurface">#0F1414</item>
        <item name="colorOnSurface">#E0E3E3</item>
        <item name="colorSurfaceVariant">#3F4948</item>
        <item name="colorOnSurfaceVariant">#BEC9C8</item>
        
        <!-- Background Colors (Dark) -->
        <item name="android:colorBackground">#0F1414</item>
        <item name="colorOnBackground">#E0E3E3</item>
        
        <!-- Outline Colors (Dark) -->
        <item name="colorOutline">#899392</item>
        <item name="colorOutlineVariant">#3F4948</item>
        
        <!-- Status Bar (Dark) -->
        <item name="android:statusBarColor">@color/md_theme_surface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Navigation Bar (Dark) -->
        <item name="android:navigationBarColor">@color/md_theme_surface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>
    </style>
</resources>
